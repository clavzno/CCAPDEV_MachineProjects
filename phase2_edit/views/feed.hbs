<body class="bodyContent">
    {{>header}}
    <div class="content">
        {{>sidebar_left}}
        <div class="mainContent">

            <!-- selector -->
            <div class="selector ruda-regular point">
                    <a href="/feed" class="selector_selected">Feed</a>
                    <p style="margin-left:20%;">Popular</p>
            </div>
            <!-- end selector -->
            {{#if input}}
                {{>content_input}}
            {{/if}}

            {{#if post}}
                {{#each post}}
                {{>post}}
                {{/each}}
            {{else}}
                {{#if singlepost}}
                    {{>singlepost}}
                    {{>content_input}}
                    {{#if comment}}
                        <p>testing2</p>
                        {{#each comment}}
                        {{>comment}}
                        {{/each}}
                    {{/if}}
                {{else}}
                    {{#if editsinglepost}}
                        {{>editsinglepost}}
                        {{else}}
                        <p>posts are empty</p>
                    {{/if}}
                {{/if}}    
            {{/if}}   
        </div>
        {{>sidebar_right}}
        <div class="logoutButton">
            <a href="/logout">
                <img class="" src="../../sprites/icons/Dark/icons8-login-rounded-96-darkmode.png" alt="logout" />
            </a>
        </div>
    </div>
</body>