<link rel="stylesheet" href="../css/common.css">
<link rel="stylesheet" href="../css/search.css"> 


<title>Bookface</title>
<body>
    <div class="header">
        <h1 class="point logotype ruda-bold">Bookface</h1>
        <div class="point searchBar textInput">
            <img src="../sprites/icons/Dark/icons8-search-96-darkmode.png" alt="searchBar" />
            <p class="ruda-regular-lighter">Search...</p>
        </div>
        <div class="point userProfile">
            <a href="profile.html">
                <img class="userImg" src="../sprites/icons/Dark/icons8-male-user-96-darkmode.png" alt="userprofile" />
            </a>
        </div>
    </div>

    <div class="content">
        <div id="sideBar-left" class="sideBar">
            <div class="home navigation universal_boxshadow point" onclick="window.location.href='feed.html'">
                <img src="../sprites/icons/Dark/icons8-home-96-darkmode.png" alt="home" />
                <h1 class="ruda-regular">Home</h1>
            </div>
            <div class="search navigation universal_boxshadow point" onclick="window.location.href='search.html'">
                <img src="../sprites/icons/Dark/icons8-search-96-darkmode.png" alt="search" />
                <h1 class="ruda-regular">Search</h1>
            </div>
            <div class="settings navigation universal_boxshadow point" onclick="window.location.href='profile.html'">
                <img src="../sprites/icons/Dark/icons8-edit-96-darkmode.png" alt="settings" />
                <h1 class="ruda-regular">Settings</h1>  
            </div>
        </div>


        <div class="mainContent">
            <!-- selector -->
            <div class="searchOptions_main">
                <div class="selector ruda-regular point searchOptions" id="searchOptions_dropdown" onclick="toggleDropdown()">
                    <p>Search options</p>
                    <img id="search-dropdown" src="../sprites/icons/Dark/icons8-filter-96-darkmode.png" class="actionImg" alt="searchFilter" />
                    <div class="searchOptions_dropdown" id="searchOptions_dropdown">
                        <ul id="TopPost" onclick=""></ul>
                        <ul id="latestPost" onclick=""></ul>
                    </div>
                </div>
            </div>
            <!-- end selector -->

            <!-- start search results -->
            <div class="searchResults">
                {{#if posts}}
                    {<div class="post">
                <div class="post-header">
                    <div class="post-userImg">
                        <img src="{{userImg}}" alt="userImg">
                    </div>
                    <div class="post-userInfo">
                        <p class="post-username">{{username}}</p>
                        <p class="post-date">{{postDate}}</p>
                    </div>
                </div>
                <div class="post-content">
                    <p>{{postContent}}</p>
                </div>
                <div class="post-actions">
                    <div class="post-like">
                        <img src="../sprites/icons/Dark/icons8-like-96-darkmode.png" alt="like">
                        <p>{{likesCount}}</p>
                    </div>
                    <div class="post-comment">
                        <img src="../sprites/icons/Dark/icons8-comment-96-darkmode.png" alt="comment">
                        <p>{{commentsCount}}</p>
                    </div>
                </div>
            </div>
            <br>
                    {{/each}}
                {{else}}
                <p style="color: white;" class="work-sans-regular">Uh oh! We couldn't find anything that matches your search criteria. Don't try again.</p>
                {{/if}}
            </div> <!-- end search results -->

        </div> <!-- end main content -->

        <div id="sideBar-right" class="sideBar universal_boxshadow">
        <!-- this should fit up to 3 users, let's keep it at that. this should have the same code as calculating top posts, except it shows the users -jack -->
            <h1 class="ruda-bold">Popular Today</h1>
            <!-- start featured user -->
            <div class="featuredUser point">
                <div class="featuredUser_profile">
                    <img class="userImg" src="../sprites/icons/Dark/icons8-male-user-96-darkmode.png" alt="user" />
                </div>
                <div class="featuredUser_info">
                    <p class="orienta-regular">User Orienta</p>
                    <p class="orienta-regular-lighter">@orienta</p>
                </div>
                <div class="featuredUser_follow">
                    <img class="actionImg" src="../sprites/icons/Dark/icons8-add-user-male-96-darkmode.png" alt="follow" />
                </div>
            </div>
            <!-- end featured user -->

            <!-- start featured user -->
            <div class="featuredUser point">
                <div class="featuredUser_profile">
                    <img class="userImg" src="../sprites/icons/Dark/icons8-male-user-96-darkmode.png" alt="user" />
                </div>
                <div class="featuredUser_info">
                    <p class="orienta-regular">User Orienta</p>
                    <p class="orienta-regular-lighter">@orienta</p>
                </div>
                <div class="featuredUser_follow">
                    <img class="actionImg" src="../sprites/icons/Dark/icons8-add-user-male-96-darkmode.png" alt="follow" />
                </div>
            </div>
            <!-- end featured user -->
        </div> <!-- end right sidebar-->

        <div class="logoutButton">
            <img class="" src="../sprites/icons/Dark/icons8-login-rounded-96-darkmode.png" alt="logout" />
        </div>

    </div> <!-- end  content -->    
    <script src="../phase2_edit/posts.js"></script>
</body>